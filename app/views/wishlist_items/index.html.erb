<div class="container mt-4">
  <div class="row mb-4">
    <div class="col">
      <h2><i class="bi bi-heart-fill text-danger me-2"></i><%= t('my_wishlist') %></h2>
    </div>
  </div>

  <% if @products.any? %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @products.each do |product| %>
        <div class="col">
          <%= render partial: "products/product_card", locals: { product: product } %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-heart text-muted fs-1 mb-3"></i>
      <h3 class="text-muted"><%= t('wishlist_empty') %></h3>
      <p class="mb-4"><%= t('save_items_love') %></p>
      <%= link_to t('browse_products'), products_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
