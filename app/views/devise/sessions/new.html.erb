<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h2><%= t('login') %></h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, t('email'), class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, t('password'), class: "form-label" %>
              <div class="input-group">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "login-password" %>
                <button class="btn btn-outline-secondary" type="button" id="toggle-login-password">
                  <i class="bi bi-eye" id="login-eye-icon"></i>
                </button>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, t('remember_me'), class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit t('login'), class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>