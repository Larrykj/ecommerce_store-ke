<h2><%= t('change_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <p><%= f.label :password, t('new_password') %></p>
    <% if @minimum_password_length %>
      <p><em>(<%= @minimum_password_length %> <%= t('min_password_char') %>)</em></p>
    <% end %>
    <div class="input-group">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", id: "reset-password" %>
      <button class="btn btn-outline-secondary" type="button" id="toggle-reset-password">
        <i class="bi bi-eye" id="reset-eye-icon"></i>
      </button>
    </div>
  </div>

  <div class="field">
    <p><%= f.label :password_confirmation, t('confirm_new_password') %></p>
    <div class="input-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "reset-password-confirm" %>
      <button class="btn btn-outline-secondary" type="button" id="toggle-reset-password-confirm">
        <i class="bi bi-eye" id="reset-confirm-eye-icon"></i>
      </button>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('change_my_password') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
