<div class="container">
  <h1>My Orders</h1>

  <% if @orders.empty? %>
    <div class="alert alert-info">
      <p>You haven't placed any orders yet.</p>
      <%= link_to 'Start Shopping', products_path, class: 'btn btn-primary' %>
    </div>
  <% else %>
    <% @orders.each do |order| %>
      <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <strong>Order #<%= order.id %></strong>
            <span class="ms-3 text-muted"><%= order.created_at.strftime("%B %d, %Y") %></span>
          </div>
          <span class="badge bg-<%= order.status == 'pending' ? 'warning' : order.status == 'delivered' ? 'success' : 'info' %>">
            <%= order.status.titleize %>
          </span>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-8">
              <h6>Items:</h6>
              <ul>
                <% order.order_items.each do |item| %>
                  <li><%= item.product.name %> x <%= item.quantity %></li>
                <% end %>
              </ul>
            </div>
            <div class="col-md-4 text-end">
              <h5><%= order.formatted_total %></h5>
              <%= link_to 'View Details', order_path(order), class: 'btn btn-sm btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>