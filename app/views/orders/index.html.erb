<div class="container">
  <h1><%= t('my_orders') %></h1>

  <% if @orders.empty? %>
    <div class="alert alert-info">
      <p><%= t('no_orders') %></p>
      <%= link_to t('start_shopping'), products_path, class: 'btn btn-primary' %>
    </div>
  <% else %>
    <% @orders.each do |order| %>
      <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <strong><%= t('order_number') %><%= order.id %></strong>
            <span class="ms-3 text-muted"><%= l(order.created_at, format: :long) %></span>
          </div>
          <span class="badge bg-<%= order.status == 'pending' ? 'warning' : order.status == 'delivered' ? 'success' : 'info' %>">
            <%= t("order.status.#{order.status}") %>
          </span>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-8">
              <h6><%= t('items') %></h6>
              <ul>
                <% order.order_items.each do |item| %>
                  <li><%= item.product.name %> x <%= item.quantity %></li>
                <% end %>
              </ul>
            </div>
            <div class="col-md-4 text-end">
              <h5><%= format_price(order.total_price) %></h5>
              <%= link_to t('view_details'), order_path(order), class: 'btn btn-sm btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>