<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white border-bottom-0 pb-0">
        <h2 class="fw-bold text-center mt-3">Checkout</h2>
      </div>
      <div class="card-body p-4">
        
        <div class="mb-4">
          <h5 class="border-bottom pb-2">Order Summary</h5>
          <ul class="list-group list-group-flush">
            <% @cart.cart_items.each do |item| %>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <div>
                  <h6 class="my-0"><%= item.product.name %></h6>
                  <small class="text-muted">Qty: <%= item.quantity %></small>
                </div>
                <span class="text-muted"><%= item.formatted_subtotal %></span>
              </li>
            <% end %>
            <li class="list-group-item d-flex justify-content-between px-0 fw-bold">
              <span>Total (KSh)</span>
              <strong><%= @cart.formatted_total %></strong>
            </li>
          </ul>
        </div>

        <h5 class="border-bottom pb-2 mb-3">Shipping Details</h5>
        
        <%= form_with(model: @order, local: true, class: "needs-validation") do |form| %>
          <% if @order.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>
              <ul>
                <% @order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-control", placeholder: "John Doe", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, class: "form-control", placeholder: "john@example.com", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :address, class: "form-label" %>
            <%= form.text_area :address, class: "form-control", rows: 3, placeholder: "123 Street Name, City", required: true %>
          </div>

          <div class="d-grid gap-2 mt-4">
            <%= form.submit "Place Order", class: "btn btn-success btn-lg" %>
            <%= link_to "Back to Cart", cart_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
