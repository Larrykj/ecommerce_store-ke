<div class="container">
  <h1><%= t('checkout_page') %></h1>

  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5><%= t('shipping_info') %></h5>
        </div>
        <div class="card-body">
          <%= form_with(model: @order, local: true) do |form| %>
            <% if @order.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= t('error_prohibited_save', count: @order.errors.count, resource: t('order_resource')) %>:</h4>
                <ul>
                  <% @order.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, t('full_name'), class: 'form-label' %>
              <%= form.text_field :name, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :email, t('email'), class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :phone, t('phone_number_mpesa'), class: 'form-label' %>
              <%= form.text_field :phone, class: 'form-control', placeholder: '0712345678', required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :address, t('delivery_address'), class: 'form-label' %>
              <%= form.text_area :address, class: 'form-control', rows: 3, required: true %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit t('place_order'), class: 'btn btn-success btn-lg' %>
              <%= link_to t('back_to_cart'), cart_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5><%= t('order_summary') %></h5>
        </div>
        <div class="card-body">
          <% @cart.cart_items.each do |item| %>
            <div class="d-flex justify-content-between mb-2">
              <span><%= item.product.name %> x <%= item.quantity %></span>
              <span><%= format_price(item.subtotal) %></span>
            </div>
          <% end %>
          <hr>
          <div class="d-flex justify-content-between">
            <strong><%= t('total') %></strong>
            <strong><%= format_price(@cart.total_price) %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>