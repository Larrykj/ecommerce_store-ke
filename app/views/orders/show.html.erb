<div class="container">
  <div class="alert alert-success">
    <h4>âœ… Order Placed Successfully!</h4>
    <p>Your order #<%= @order.id %> has been received and is being processed.</p>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5>Order Details - #<%= @order.id %></h5>
        </div>
        <div class="card-body">
          <p><strong>Status:</strong> <span class="badge bg-warning"><%= @order.status.titleize %></span></p>
          <p><strong>Order Date:</strong> <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          
          <hr>
          
          <h6>Shipping Information:</h6>
          <p><strong>Name:</strong> <%= @order.name %></p>
          <p><strong>Email:</strong> <%= @order.email %></p>
          <p><strong>Phone:</strong> <%= @order.phone %></p>
          <p><strong>Address:</strong> <%= @order.address %></p>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5>Order Items</h5>
        </div>
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% @order.order_items.each do |item| %>
                <tr>
                  <td><%= item.product.name %></td>
                  <td>KSh <%= item.price.round(2) %></td>
                  <td><%= item.quantity %></td>
                  <td><%= item.formatted_subtotal %></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                <td><strong><%= @order.formatted_total %></strong></td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5>What's Next?</h5>
        </div>
        <div class="card-body">
          <p>We'll send you an email confirmation shortly.</p>
          <p>You'll receive updates about your order status via email and SMS.</p>
          <div class="d-grid gap-2">
            <%= link_to 'View All Orders', orders_path, class: 'btn btn-primary' %>
            <%= link_to 'Continue Shopping', products_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>