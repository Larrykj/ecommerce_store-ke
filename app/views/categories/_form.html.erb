<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= t('error_prohibited_save', count: category.errors.count, resource: t('category')) %>:</h4>
      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, t('name'), class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', placeholder: t('enter_category_name') %>
  </div>

  <div class="mb-3">
    <%= form.label :description, t('description'), class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', rows: 3, placeholder: t('enter_category_description') %>
  </div>

  <div class="mb-3">
    <%= form.label :image, t('category_image'), class: 'form-label' %>
    <div class="image-upload-container">
      <% if category.image.attached? %>
        <div class="current-image">
          <%= image_tag category.image, class: "preview-image" %>
          <span class="image-name"><%= category.image.filename %></span>
        </div>
      <% end %>
      <%= form.file_field :image, accept: "image/*", class: 'form-control', direct_upload: true %>
      <small class="text-muted"><%= t('image_upload_hint') %></small>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to t('cancel'), categories_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

<style>
.image-upload-container {
  margin-top: 8px;
}
.current-image {
  margin-bottom: 12px;
  padding: 12px;
  background: #f8fafc;
  border-radius: 8px;
  display: flex;
  align-items: center;
  gap: 12px;
}
.preview-image {
  width: 80px;
  height: 60px;
  object-fit: cover;
  border-radius: 6px;
}
.image-name {
  color: #64748b;
  font-size: 0.9rem;
}
</style>
