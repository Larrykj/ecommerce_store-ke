<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4 fw-bold">Explore Our Kenyan Market</h1>
    <p class="lead text-muted">Discover authentic products from across Africa, curated just for you.</p>
    <div>
      <span class="badge bg-primary fs-5 rounded-pill me-2"><%= @categories.count %> Categories</span>
      <%= link_to 'Add New Category', new_category_path, class: 'btn btn-success' %>
    </div>
  </div>

  <% if @categories.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @categories.each do |category| %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold"><%= category.name %></h5>
              <p class="card-text text-muted flex-grow-1"><%= truncate(category.description, length: 100) %></p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="text-secondary"><%= pluralize(category.products.count, 'Product') %></span>
              </div>
            </div>

            <div class="card-footer bg-white border-top-0 pb-3">
              <div class="btn-group w-100" role="group">
                <%= link_to 'View', category_path(category), class: 'btn btn-outline-primary' %>
                <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-warning' %>
                <%= button_to 'Delete', category_path(category), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-tags display-1 text-muted"></i>
      <p class="lead mt-3">No categories found.</p>
      <%= link_to "Create First Category", new_category_path, class: "btn btn-primary btn-lg mt-2" %>
    </div>
  <% end %>
</div>
