<div class="container">
  <h1><%= @product.name %></h1>

  <div class="card">
    <div class="card-body">
      <p><strong>Description:</strong></p>
      <p><%= @product.description %></p>

      <p><strong>Price:</strong> <%= number_to_currency(@product.price, unit: "KSh ") %></p>

      <p><strong>Quantity Available:</strong> <%= @product.quantity %></p>

      <p>
        <% if @product.in_stock? %>
          <span class="badge bg-success mb-2">In Stock</span>
          <div class="mt-2">
            <%= button_to 'Add to Cart', cart_items_path(product_id: @product.id), method: :post, class: 'btn btn-success btn-lg' %>
          </div>
        <% else %>
          <span class="badge bg-danger">Out of Stock</span>
        <% end %>
      </p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-warning' %>
    <%= link_to 'Back to Products', products_path, class: 'btn btn-secondary' %>
    <%= button_to 'Delete', product_path(@product), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>
</div>