<div class="product-show-page">
  <div class="container product-container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb-nav">
      <%= link_to products_path, class: "breadcrumb-link" do %>
        <i class="bi bi-house me-1"></i><%= t("products") %>
      <% end %>
      <i class="bi bi-chevron-right breadcrumb-sep"></i>
      <% if @product.category %>
        <%= link_to @product.category.name, category_path(@product.category), class: "breadcrumb-link" %>
        <i class="bi bi-chevron-right breadcrumb-sep"></i>
      <% end %>
      <span class="breadcrumb-current"><%= @product.name %></span>
    </nav>

    <div class="product-detail">
      <!-- Product Image -->
      <div class="product-image-section">
        <div class="image-wrapper">
          <% if @product.image.attached? %>
            <%= image_tag @product.image, class: "product-main-image", alt: @product.name %>
          <% else %>
            <div class="image-placeholder">
              <i class="bi bi-box-seam"></i>
            </div>
          <% end %>
          <span class="stock-badge badge-<%= @product.stock_status_class %>">
            <%= @product.stock_status_label %>
          </span>
        </div>
      </div>

      <!-- Product Info -->
      <div class="product-info-section">
        <% if @product.category %>
          <span class="product-category"><%= @product.category.name %></span>
        <% end %>

        <h1 class="product-title"><%= @product.name %></h1>

        <!-- Rating Summary -->
        <div class="rating-summary">
          <div class="stars-large">
            <% 5.times do |i| %>
              <i class="bi bi-star<%= i < @product.average_rating.round ? '-fill' : '' %>"></i>
            <% end %>
          </div>
          <span class="rating-value"><%= @product.average_rating %></span>
          <span class="rating-count">(<%= t("product_reviews_count", count: @product.reviews_count) %>)</span>
          <% if user_signed_in? && !@product.reviewed_by?(current_user) %>
            <a href="#write-review" class="write-review-link"><%= t("write_review") %></a>
          <% end %>
        </div>

        <div class="product-price-box">
          <span class="price-label"><%= t("price") %></span>
          <div class="price-value">
            <span class="amount"><%= format_price(@product.price.to_i) %></span>
          </div>
        </div>

        <div class="product-description">
          <h4><i class="bi bi-info-circle me-2"></i><%= t("description") %></h4>
          <p><%= @product.description %></p>
        </div>

        <div class="product-meta">
          <div class="meta-item">
            <i class="bi bi-box"></i>
            <div>
              <span class="meta-label"><%= t("quantity_available") %></span>
              <span class="meta-value"><%= @product.quantity %> <%= t("units") %></span>
            </div>
          </div>
          <div class="meta-item">
            <i class="bi bi-check-circle"></i>
            <div>
              <span class="meta-label"><%= t("availability") %></span>
              <span class="meta-value status-<%= @product.stock_status_class %>">
                <%= @product.in_stock? ? t("in_stock") : t("out_of_stock") %>
              </span>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="product-actions">
          <% if @product.in_stock? %>
            <%= button_to cart_items_path(product_id: @product.id), method: :post, class: "btn-add-cart" do %>
              <i class="bi bi-cart-plus me-2"></i><%= t("add_to_cart") %>
            <% end %>
          <% else %>
            <button class="btn-out-of-stock" disabled>
              <i class="bi bi-x-circle me-2"></i><%= t("out_of_stock") %>
            </button>
          <% end %>

          <div class="secondary-actions">

            <%= link_to edit_product_path(@product), class: "action-btn edit" do %>
              <i class="bi bi-pencil"></i>
            <% end %>
            <%= button_to product_path(@product), method: :delete, data: { turbo_confirm: t("are_you_sure") }, class: "action-btn delete" do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </div>
        </div>

        <%= link_to products_path, class: "back-link" do %>
          <i class="bi bi-arrow-left me-2"></i><%= t('back_to_products') %>
        <% end %>
      </div>
    </div>

    <!-- Reviews Section -->
    <!-- Reviews Section -->
    <div class="reviews-section" id="reviews">
      <div class="reviews-header">
        <h2><i class="bi bi-chat-quote me-2"></i><%= t("customer_reviews") %></h2>
        <span class="reviews-count"><%= t("product_reviews_count", count: @product.reviews_count) %></span>
      </div>

      <div class="reviews-content">
        <!-- Rating Breakdown -->
        <div class="rating-breakdown">
          <div class="overall-rating">
            <span class="big-rating"><%= @product.average_rating %></span>
            <div class="stars-display">
              <% 5.times do |i| %>
                <i class="bi bi-star<%= i < @product.average_rating.round ? '-fill' : '' %>"></i>
              <% end %>
            </div>
            <span class="total-reviews"><%= t("product_reviews_count", count: @product.reviews_count) %></span>
          </div>
          
          <div class="rating-bars">
            <% @product.rating_distribution.sort.reverse.each do |rating, count| %>
              <div class="rating-bar-row">
                <span class="star-label"><%= rating %> <i class="bi bi-star-fill"></i></span>
                <div class="rating-bar">
                  <div class="rating-bar-fill" style="width: <%= @product.reviews_count > 0 ? (count.to_f / @product.reviews_count * 100).round : 0 %>%"></div>
                </div>
                <span class="rating-count"><%= count %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Write Review Form -->
        <% if user_signed_in? %>
          <% if @product.reviewed_by?(current_user) %>
            <div class="already-reviewed">
              <i class="bi bi-check-circle-fill"></i>
              <span><%= t("already_reviewed") %></span>
              <% user_review = @product.review_by(current_user) %>
              <%= link_to t("edit_your_review"), edit_product_review_path(@product, user_review), class: "edit-review-link" %>
            </div>
          <% else %>
            <div class="write-review" id="write-review">
              <h3><i class="bi bi-pencil-square me-2"></i><%= t("write_review") %></h3>
              <%= form_with model: [@product, Review.new], local: true, class: "review-form" do |f| %>
                <div class="form-group">
                  <label class="form-label"><%= t("your_rating") %></label>
                  <div class="star-rating-input">
                    <% 5.downto(1) do |i| %>
                      <%= f.radio_button :rating, i, id: "rating-#{i}", class: "star-input" %>
                      <label for="rating-<%= i %>" class="star-label-input"><i class="bi bi-star-fill"></i></label>
                    <% end %>
                  </div>
                </div>
                
                <div class="form-group">
                  <label class="form-label"><%= t("review_title_optional") %></label>
                  <%= f.text_field :title, class: "form-control", placeholder: t("summarize_experience") %>
                </div>
                
                <div class="form-group">
                  <label class="form-label"><%= t("your_review") %></label>
                  <%= f.text_area :content, class: "form-control", rows: 4, placeholder: t("share_experience_placeholder") %>
                </div>
                
                <%= f.submit t("submit_review"), class: "btn-submit-review" %>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="login-to-review">
            <i class="bi bi-person-circle"></i>
            <p><%= t("please_sign_in_review_html", sign_in_link: link_to(t("sign_in"), new_user_session_path)) %></p>
          </div>
        <% end %>

        <!-- Reviews List -->
        <div class="reviews-list">
          <% if @product.reviews.any? %>
            <% @product.reviews.recent.each do |review| %>
              <div class="review-card" id="review-<%= review.id %>">
                <div class="review-header">
                  <div class="reviewer-info">
                    <div class="reviewer-avatar">
                      <%= review.user.name.first.upcase %>
                    </div>
                    <div>
                      <span class="reviewer-name"><%= review.user.name %></span>
                      <span class="review-date"><%= review.formatted_date %></span>
                    </div>
                  </div>
                  <div class="review-rating">
                    <% 5.times do |i| %>
                      <i class="bi bi-star<%= i < review.rating ? '-fill' : '' %>"></i>
                    <% end %>
                    <span class="rating-label-text"><%= review.rating_label %></span>
                  </div>
                </div>
                
                <% if review.title.present? %>
                  <h4 class="review-title"><%= review.title %></h4>
                <% end %>
                
                <p class="review-content"><%= review.content %></p>
                
                <div class="review-footer">
                  <div class="review-actions">
                    <%= button_to helpful_product_review_path(@product, review), method: :post, class: "helpful-btn", data: { turbo: false } do %>
                      <i class="bi bi-hand-thumbs-up"></i>
                      <%= t("helpful") %> (<%= review.helpful_count %>)
                    <% end %>
                    
                    <% if review.editable_by?(current_user) %>
                      <%= link_to edit_product_review_path(@product, review), class: "review-action-btn" do %>
                        <i class="bi bi-pencil"></i> <%= t("edit") %>
                      <% end %>
                      <%= button_to product_review_path(@product, review), method: :delete, data: { turbo_confirm: t("delete_review_confirm") }, class: "review-action-btn delete" do %>
                        <i class="bi bi-trash"></i> <%= t("delete") %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="no-reviews">
              <i class="bi bi-chat-square-text"></i>
              <h4><%= t("no_reviews_yet") %></h4>
              <p><%= t("be_first_to_review") %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
:root {
  --primary: #667eea;
  --secondary: #764ba2;
  --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --success: #10b981;
  --warning: #f59e0b;
  --danger: #ef4444;
  --star-color: #fbbf24;
}

.product-show-page { background: #f8fafc; min-height: 100vh; padding: 30px 0; }
.product-container { max-width: 1200px; padding: 0 20px; }

/* Breadcrumb */
.breadcrumb-nav { display: flex; align-items: center; gap: 10px; margin-bottom: 30px; font-size: 0.9rem; }
.breadcrumb-link { color: #667eea; text-decoration: none; }
.breadcrumb-link:hover { text-decoration: underline; color: #5a67d8; }
.breadcrumb-sep { color: #cbd5e1; font-size: 0.75rem; }
.breadcrumb-current { color: #64748b; }

/* Product Detail */
.product-detail { display: grid; grid-template-columns: 1fr 1fr; gap: 50px; background: white; border-radius: 20px; padding: 40px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); }

/* Image Section */
.product-image-section { position: relative; }
.image-wrapper { position: relative; border-radius: 16px; overflow: hidden; background: #f1f5f9; }
.product-main-image { width: 100%; height: 450px; object-fit: cover; }
.image-placeholder { width: 100%; height: 450px; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%); }
.image-placeholder i { font-size: 5rem; color: #cbd5e1; }
.stock-badge { position: absolute; top: 16px; left: 16px; padding: 8px 16px; border-radius: 25px; font-size: 0.85rem; font-weight: 600; }
.badge-success { background: rgba(16,185,129,0.95); color: white; }
.badge-warning { background: rgba(245,158,11,0.95); color: #1e293b; }
.badge-danger { background: rgba(239,68,68,0.95); color: white; }

/* Info Section */
.product-info-section { display: flex; flex-direction: column; }
.product-category { display: inline-block; padding: 6px 16px; background: rgba(102,126,234,0.1); color: var(--primary); border-radius: 20px; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; margin-bottom: 16px; width: fit-content; }
.product-title { font-size: 2rem; font-weight: 800; color: #1e293b; margin: 0 0 16px; line-height: 1.2; }

/* Rating Summary */
.rating-summary { display: flex; align-items: center; gap: 10px; margin-bottom: 24px; flex-wrap: wrap; }
.stars-large i { font-size: 1.2rem; color: var(--star-color); }
.rating-value { font-size: 1.1rem; font-weight: 700; color: #1e293b; }
.rating-count { color: #64748b; font-size: 0.9rem; }
.write-review-link { margin-left: auto; color: var(--primary); text-decoration: none; font-weight: 600; }
.write-review-link:hover { text-decoration: underline; }

/* Price Box */
.product-price-box { background: var(--gradient); border-radius: 14px; padding: 20px 24px; margin-bottom: 24px; }
.price-label { display: block; color: rgba(255,255,255,0.8); font-size: 0.85rem; margin-bottom: 4px; }
.price-value { display: flex; align-items: baseline; gap: 6px; }
.currency { color: white; font-size: 1.2rem; font-weight: 600; }
.amount { color: white; font-size: 2.5rem; font-weight: 800; }

/* Description */
.product-description { margin-bottom: 24px; padding: 20px; background: #f8fafc; border-radius: 12px; }
.product-description h4 { font-size: 1rem; font-weight: 600; color: #475569; margin: 0 0 12px; }
.product-description p { color: #64748b; line-height: 1.7; margin: 0; }

/* Meta */
.product-meta { display: flex; gap: 20px; margin-bottom: 30px; }
.meta-item { flex: 1; display: flex; align-items: center; gap: 14px; padding: 16px; background: #f8fafc; border-radius: 12px; }
.meta-item > i { font-size: 1.5rem; color: var(--primary); }
.meta-label { display: block; font-size: 0.8rem; color: #94a3b8; }
.meta-value { font-size: 1rem; font-weight: 600; color: #1e293b; }
.status-success { color: var(--success); }
.status-warning { color: var(--warning); }
.status-danger { color: var(--danger); }

/* Actions */
.product-actions { display: flex; gap: 16px; align-items: center; margin-bottom: 24px; }
.btn-add-cart { flex: 1; display: flex; align-items: center; justify-content: center; padding: 16px 32px; background: var(--success); color: white; border: none; border-radius: 12px; font-size: 1.1rem; font-weight: 700; cursor: pointer; transition: all 0.2s; }
.btn-add-cart:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(16,185,129,0.4); }
.btn-out-of-stock { flex: 1; padding: 16px 32px; background: #e2e8f0; color: #94a3b8; border: none; border-radius: 12px; font-size: 1.1rem; font-weight: 700; cursor: not-allowed; }
.secondary-actions { display: flex; gap: 10px; }
.action-btn { width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; border-radius: 12px; font-size: 1.1rem; text-decoration: none; transition: all 0.2s; border: none; cursor: pointer; }
.action-btn.edit { background: rgba(245,158,11,0.1); color: var(--warning); }
.action-btn.edit:hover { background: var(--warning); color: white; }
.action-btn.delete { background: rgba(239,68,68,0.1); color: var(--danger); }
.action-btn.delete:hover { background: var(--danger); color: white; }
.back-link { display: inline-flex; align-items: center; color: #64748b; text-decoration: none; font-weight: 500; transition: color 0.2s; }
.back-link:hover { color: var(--primary); }

/* ============ REVIEWS SECTION ============ */
.reviews-section { margin-top: 40px; background: white; border-radius: 20px; padding: 40px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); }
.reviews-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; padding-bottom: 20px; border-bottom: 2px solid #f1f5f9; }
.reviews-header h2 { margin: 0; font-size: 1.5rem; font-weight: 700; color: #1e293b; }
.reviews-count { background: var(--gradient); color: white; padding: 6px 16px; border-radius: 20px; font-weight: 600; font-size: 0.9rem; }

.reviews-content { display: grid; grid-template-columns: 300px 1fr; gap: 40px; }

/* Rating Breakdown */
.rating-breakdown { background: #f8fafc; border-radius: 16px; padding: 24px; height: fit-content; position: sticky; top: 20px; }
.overall-rating { text-align: center; margin-bottom: 24px; padding-bottom: 24px; border-bottom: 2px solid #e2e8f0; }
.big-rating { font-size: 3.5rem; font-weight: 800; color: #1e293b; display: block; }
.stars-display { margin: 8px 0; }
.stars-display i { font-size: 1.3rem; color: var(--star-color); }
.total-reviews { color: #64748b; font-size: 0.9rem; }

.rating-bars { display: flex; flex-direction: column; gap: 10px; }
.rating-bar-row { display: flex; align-items: center; gap: 10px; }
.star-label { width: 40px; font-size: 0.85rem; color: #475569; display: flex; align-items: center; gap: 4px; }
.star-label i { font-size: 0.75rem; color: var(--star-color); }
.rating-bar { flex: 1; height: 8px; background: #e2e8f0; border-radius: 4px; overflow: hidden; }
.rating-bar-fill { height: 100%; background: var(--gradient); border-radius: 4px; transition: width 0.3s; }
.rating-count { width: 30px; text-align: right; font-size: 0.85rem; color: #64748b; }

/* Write Review */
.write-review { background: #f8fafc; border-radius: 16px; padding: 24px; margin-bottom: 30px; }
.write-review h3 { margin: 0 0 20px; font-size: 1.1rem; font-weight: 700; color: #1e293b; }
.review-form { display: flex; flex-direction: column; gap: 20px; }
.form-group { display: flex; flex-direction: column; gap: 8px; }
.form-label { font-weight: 600; color: #475569; font-size: 0.9rem; }
.form-control { padding: 12px 16px; border: 2px solid #e2e8f0; border-radius: 10px; font-size: 1rem; transition: border-color 0.2s; }
.form-control:focus { outline: none; border-color: var(--primary); }

/* Star Rating Input */
.star-rating-input { display: flex; flex-direction: row-reverse; justify-content: flex-end; gap: 4px; }
.star-input { display: none; }
.star-label-input { cursor: pointer; font-size: 2rem; color: #e2e8f0; transition: color 0.2s; }
.star-label-input:hover, .star-label-input:hover ~ .star-label-input,
.star-input:checked ~ .star-label-input { color: var(--star-color); }

.btn-submit-review { padding: 14px 28px; background: var(--gradient); color: white; border: none; border-radius: 10px; font-size: 1rem; font-weight: 700; cursor: pointer; transition: all 0.2s; width: fit-content; }
.btn-submit-review:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(102,126,234,0.4); }

/* Already Reviewed / Login to Review */
.already-reviewed, .login-to-review { display: flex; align-items: center; gap: 12px; padding: 20px; background: rgba(16,185,129,0.1); border-radius: 12px; margin-bottom: 30px; }
.already-reviewed i { font-size: 1.5rem; color: var(--success); }
.already-reviewed span { color: #1e293b; font-weight: 500; }
.edit-review-link { margin-left: auto; color: var(--primary); font-weight: 600; text-decoration: none; }
.edit-review-link:hover { text-decoration: underline; }
.login-to-review { background: rgba(102,126,234,0.1); }
.login-to-review i { font-size: 2rem; color: var(--primary); }
.login-to-review p { margin: 0; color: #475569; }
.login-to-review a { color: var(--primary); font-weight: 600; }

/* Reviews List */
.reviews-list { display: flex; flex-direction: column; gap: 20px; }
.review-card { background: white; border: 2px solid #f1f5f9; border-radius: 16px; padding: 24px; transition: all 0.2s; }
.review-card:hover { border-color: #e2e8f0; box-shadow: 0 4px 15px rgba(0,0,0,0.05); }
.review-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px; flex-wrap: wrap; gap: 12px; }
.reviewer-info { display: flex; align-items: center; gap: 12px; }
.reviewer-avatar { width: 44px; height: 44px; background: var(--gradient); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 1.1rem; }
.reviewer-name { display: block; font-weight: 600; color: #1e293b; }
.review-date { font-size: 0.85rem; color: #94a3b8; }
.review-rating { display: flex; align-items: center; gap: 8px; }
.review-rating i { color: var(--star-color); font-size: 0.9rem; }
.rating-label-text { font-size: 0.85rem; color: #64748b; font-weight: 500; }
.review-title { font-size: 1.1rem; font-weight: 700; color: #1e293b; margin: 0 0 12px; }
.review-content { color: #475569; line-height: 1.7; margin: 0; }
.review-footer { margin-top: 20px; padding-top: 16px; border-top: 1px solid #f1f5f9; }
.review-actions { display: flex; gap: 12px; flex-wrap: wrap; }
.helpful-btn { display: inline-flex; align-items: center; gap: 6px; padding: 8px 16px; background: #f1f5f9; border: none; border-radius: 8px; color: #475569; font-size: 0.9rem; cursor: pointer; transition: all 0.2s; }
.helpful-btn:hover { background: var(--primary); color: white; }
.review-action-btn { display: inline-flex; align-items: center; gap: 4px; padding: 8px 12px; background: transparent; border: none; color: #64748b; font-size: 0.85rem; cursor: pointer; text-decoration: none; transition: color 0.2s; }
.review-action-btn:hover { color: var(--primary); }
.review-action-btn.delete:hover { color: var(--danger); }

/* No Reviews */
.no-reviews { text-align: center; padding: 60px 20px; background: #f8fafc; border-radius: 16px; }
.no-reviews i { font-size: 3rem; color: #cbd5e1; display: block; margin-bottom: 16px; }
.no-reviews h4 { color: #1e293b; margin: 0 0 8px; }
.no-reviews p { color: #64748b; margin: 0; }

/* Responsive */
@media (max-width: 991px) {
  .product-detail { grid-template-columns: 1fr; gap: 30px; padding: 24px; }
  .product-main-image, .image-placeholder { height: 350px; }
  .reviews-content { grid-template-columns: 1fr; }
  .rating-breakdown { position: static; }
}
@media (max-width: 576px) {
  .product-meta { flex-direction: column; }
  .product-actions { flex-direction: column; }
  .product-title { font-size: 1.5rem; }
  .amount { font-size: 2rem; }
  .reviews-section { padding: 24px; }
  .review-header { flex-direction: column; }
}
</style>