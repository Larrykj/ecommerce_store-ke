<div class="product-show-page">
  <div class="container product-container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb-nav">
      <%= link_to products_path, class: "breadcrumb-link" do %>
        <i class="bi bi-house me-1"></i>Products
      <% end %>
      <i class="bi bi-chevron-right breadcrumb-sep"></i>
      <% if @product.category %>
        <%= link_to @product.category.name, category_path(@product.category), class: "breadcrumb-link" %>
        <i class="bi bi-chevron-right breadcrumb-sep"></i>
      <% end %>
      <span class="breadcrumb-current"><%= @product.name %></span>
    </nav>

    <div class="product-detail">
      <!-- Product Image -->
      <div class="product-image-section">
        <div class="image-wrapper">
          <% if @product.image.attached? %>
            <%= image_tag @product.image, class: "product-main-image", alt: @product.name %>
          <% else %>
            <div class="image-placeholder">
              <i class="bi bi-box-seam"></i>
            </div>
          <% end %>
          <span class="stock-badge badge-<%= @product.stock_status_class %>">
            <%= @product.stock_status_label %>
          </span>
        </div>
      </div>

      <!-- Product Info -->
      <div class="product-info-section">
        <% if @product.category %>
          <span class="product-category"><%= @product.category.name %></span>
        <% end %>

        <h1 class="product-title"><%= @product.name %></h1>

        <div class="product-price-box">
          <span class="price-label">Price</span>
          <div class="price-value">
            <span class="currency">KSh</span>
            <span class="amount"><%= number_with_delimiter(@product.price.to_i) %></span>
          </div>
        </div>

        <div class="product-description">
          <h4><i class="bi bi-info-circle me-2"></i>Description</h4>
          <p><%= @product.description %></p>
        </div>

        <div class="product-meta">
          <div class="meta-item">
            <i class="bi bi-box"></i>
            <div>
              <span class="meta-label">Quantity Available</span>
              <span class="meta-value"><%= @product.quantity %> units</span>
            </div>
          </div>
          <div class="meta-item">
            <i class="bi bi-check-circle"></i>
            <div>
              <span class="meta-label">Status</span>
              <span class="meta-value status-<%= @product.stock_status_class %>">
                <%= @product.in_stock? ? "Available" : "Unavailable" %>
              </span>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="product-actions">
          <% if @product.in_stock? %>
            <%= button_to cart_items_path(product_id: @product.id), method: :post, class: "btn-add-cart" do %>
              <i class="bi bi-cart-plus me-2"></i>Add to Cart
            <% end %>
          <% else %>
            <button class="btn-out-of-stock" disabled>
              <i class="bi bi-x-circle me-2"></i>Out of Stock
            </button>
          <% end %>

          <div class="secondary-actions">
            <%= link_to edit_product_path(@product), class: "action-btn edit" do %>
              <i class="bi bi-pencil"></i>
            <% end %>
            <%= button_to product_path(@product), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this product?" }, class: "action-btn delete" do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </div>
        </div>

        <%= link_to products_path, class: "back-link" do %>
          <i class="bi bi-arrow-left me-2"></i>Back to All Products
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
:root {
  --primary: #667eea;
  --secondary: #764ba2;
  --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --success: #10b981;
  --warning: #f59e0b;
  --danger: #ef4444;
}

.product-show-page { background: #f8fafc; min-height: 100vh; padding: 30px 0; }
.product-container { max-width: 1200px; padding: 0 20px; }

/* Breadcrumb */
.breadcrumb-nav {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 30px;
  font-size: 0.9rem;
}
.breadcrumb-link { color: #667eea; text-decoration: none; }
.breadcrumb-link:hover { text-decoration: underline; color: #5a67d8; }
.breadcrumb-sep { color: #cbd5e1; font-size: 0.75rem; }
.breadcrumb-current { color: #64748b; }

/* Product Detail */
.product-detail {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 50px;
  background: white;
  border-radius: 20px;
  padding: 40px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
}

/* Image Section */
.product-image-section { position: relative; }
.image-wrapper {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  background: #f1f5f9;
}
.product-main-image {
  width: 100%;
  height: 450px;
  object-fit: cover;
}
.image-placeholder {
  width: 100%;
  height: 450px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
}
.image-placeholder i { font-size: 5rem; color: #cbd5e1; }
.stock-badge {
  position: absolute;
  top: 16px;
  left: 16px;
  padding: 8px 16px;
  border-radius: 25px;
  font-size: 0.85rem;
  font-weight: 600;
}
.badge-success { background: rgba(16,185,129,0.95); color: white; }
.badge-warning { background: rgba(245,158,11,0.95); color: #1e293b; }
.badge-danger { background: rgba(239,68,68,0.95); color: white; }

/* Info Section */
.product-info-section { display: flex; flex-direction: column; }
.product-category {
  display: inline-block;
  padding: 6px 16px;
  background: rgba(102,126,234,0.1);
  color: var(--primary);
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 16px;
  width: fit-content;
}
.product-title {
  font-size: 2rem;
  font-weight: 800;
  color: #1e293b;
  margin: 0 0 24px;
  line-height: 1.2;
}

/* Price Box */
.product-price-box {
  background: var(--gradient);
  border-radius: 14px;
  padding: 20px 24px;
  margin-bottom: 24px;
}
.price-label {
  display: block;
  color: rgba(255,255,255,0.8);
  font-size: 0.85rem;
  margin-bottom: 4px;
}
.price-value { display: flex; align-items: baseline; gap: 6px; }
.currency { color: white; font-size: 1.2rem; font-weight: 600; }
.amount { color: white; font-size: 2.5rem; font-weight: 800; }

/* Description */
.product-description {
  margin-bottom: 24px;
  padding: 20px;
  background: #f8fafc;
  border-radius: 12px;
}
.product-description h4 {
  font-size: 1rem;
  font-weight: 600;
  color: #475569;
  margin: 0 0 12px;
}
.product-description p {
  color: #64748b;
  line-height: 1.7;
  margin: 0;
}

/* Meta */
.product-meta {
  display: flex;
  gap: 20px;
  margin-bottom: 30px;
}
.meta-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 16px;
  background: #f8fafc;
  border-radius: 12px;
}
.meta-item > i { font-size: 1.5rem; color: var(--primary); }
.meta-label { display: block; font-size: 0.8rem; color: #94a3b8; }
.meta-value { font-size: 1rem; font-weight: 600; color: #1e293b; }
.status-success { color: var(--success); }
.status-warning { color: var(--warning); }
.status-danger { color: var(--danger); }

/* Actions */
.product-actions {
  display: flex;
  gap: 16px;
  align-items: center;
  margin-bottom: 24px;
}
.btn-add-cart {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px 32px;
  background: var(--success);
  color: white;
  border: none;
  border-radius: 12px;
  font-size: 1.1rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s;
}
.btn-add-cart:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(16,185,129,0.4);
}
.btn-out-of-stock {
  flex: 1;
  padding: 16px 32px;
  background: #e2e8f0;
  color: #94a3b8;
  border: none;
  border-radius: 12px;
  font-size: 1.1rem;
  font-weight: 700;
  cursor: not-allowed;
}
.secondary-actions { display: flex; gap: 10px; }
.action-btn {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  font-size: 1.1rem;
  text-decoration: none;
  transition: all 0.2s;
  border: none;
  cursor: pointer;
}
.action-btn.edit { background: rgba(245,158,11,0.1); color: var(--warning); }
.action-btn.edit:hover { background: var(--warning); color: white; }
.action-btn.delete { background: rgba(239,68,68,0.1); color: var(--danger); }
.action-btn.delete:hover { background: var(--danger); color: white; }

.back-link {
  display: inline-flex;
  align-items: center;
  color: #64748b;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s;
}
.back-link:hover { color: var(--primary); }

/* Responsive */
@media (max-width: 991px) {
  .product-detail {
    grid-template-columns: 1fr;
    gap: 30px;
    padding: 24px;
  }
  .product-main-image, .image-placeholder { height: 350px; }
}
@media (max-width: 576px) {
  .product-meta { flex-direction: column; }
  .product-actions { flex-direction: column; }
  .product-title { font-size: 1.5rem; }
  .amount { font-size: 2rem; }
}
</style>