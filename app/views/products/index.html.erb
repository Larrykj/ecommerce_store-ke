.category-options {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.category-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background: #f8f9ff;
  border-radius: var(--border-radius-sm);
  cursor: pointer;
  transition: var(--transition-fast);
  border: 2px solid transparent;
}

.category-option:hover {
  background: #eef0ff;
  transform: translateX(4px);
}

.category-option.active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: #667eea;
}

.category-name {
  font-weight: 500;
  color: #1a1a2e;
}

.category-count {
  background: #e0e5ff;
  color: #667eea;
  padding: 2px 10px;
  border-radius: 12px;
  font-size: 0.8rem;
  font-weight: 600;
}

/* Price Range Inputs */
.price-range-inputs {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 12px;
}

.price-input-group {
  flex: 1;
  position: relative;
}

.price-prefix {
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 0.75rem;
  color: #888;
  font-weight: 500;
}

.price-input {
  width: 100%;
  padding: 12px 12px 12px 42px;
  border: 2px solid #e8e8f0;
  border-radius: var(--border-radius-sm);
  font-size: 0.95rem;
  font-weight: 500;
  transition: var(--transition-fast);
}

.price-input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.price-separator {
  color: #ccc;
  font-weight: 300;
}

.price-stats {
  font-size: 0.8rem;
  color: #888;
  margin-bottom: 12px;
}

.price-presets {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.price-preset-btn {
  padding: 6px 14px;
  background: #f0f2ff;
  border: 1px solid #e0e5ff;
  border-radius: 20px;
  font-size: 0.8rem;
  color: #667eea;
  cursor: pointer;
  transition: var(--transition-fast);
}

.price-preset-btn:hover {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

/* Stock Options */
.stock-options {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.stock-option {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px 16px;
  background: #f8f9ff;
  border-radius: var(--border-radius-sm);
  cursor: pointer;
  transition: var(--transition-fast);
  border: 2px solid transparent;
}

.stock-option:hover {
  background: #eef0ff;
}

.stock-option.active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: #667eea;
}

.stock-option i {
  font-size: 1.1rem;
}

/* Sort Select */
.sort-select {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid #e8e8f0;
