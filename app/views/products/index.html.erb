<script>
document.addEventListener('DOMContentLoaded', function() {
  const filterForm = document.getElementById('filters-form');
  
  // Price preset buttons functionality - auto-submit after setting values
  const presetButtons = document.querySelectorAll('.price-preset-btn');
  const minPriceInput = document.getElementById('min-price-input');
  const maxPriceInput = document.getElementById('max-price-input');
  
  presetButtons.forEach(btn => {
    btn.addEventListener('click', function() {
      const min = this.dataset.min;
      const max = this.dataset.max;
      
      if (minPriceInput) minPriceInput.value = min;
      if (maxPriceInput) maxPriceInput.value = max;
      
      // Visual feedback
      presetButtons.forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      
      // Auto-submit form after a short delay
      if (filterForm) {
        setTimeout(() => filterForm.submit(), 200);
      }
    });
  });
  
  // Auto-submit filters on change for radio buttons
  if (filterForm) {
    const radioInputs = filterForm.querySelectorAll('input[type="radio"]');
    radioInputs.forEach(radio => {
      radio.addEventListener('change', function() {
        // Update visual state immediately
        const container = this.closest('.category-options, .stock-options');
        if (container) {
          container.querySelectorAll('.category-option, .stock-option').forEach(opt => {
            opt.classList.remove('active');
          });
          this.closest('label').classList.add('active');
        }
        
        // Auto-submit form
        setTimeout(() => filterForm.submit(), 150);
      });
    });
    
    // Auto-submit when sort dropdown changes
    const sortSelect = filterForm.querySelector('.sort-select');
    if (sortSelect) {
      sortSelect.addEventListener('change', function() {
        filterForm.submit();
      });
    }
  }
  
  // Search input focus effect
  const searchInput = document.getElementById('main-search-input');
  if (searchInput) {
    searchInput.addEventListener('focus', function() {
      const container = this.closest('.search-input-container');
      if (container) container.classList.add('focused');
    });
    searchInput.addEventListener('blur', function() {
      const container = this.closest('.search-input-container');
      if (container) container.classList.remove('focused');
    });
    
    // Submit search on Enter key
    searchInput.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        this.closest('form').submit();
      }
    });
  }
  
  // Make filter sections collapsible on mobile
  const filterLabels = document.querySelectorAll('.filter-label');
  filterLabels.forEach(label => {
    label.style.cursor = 'pointer';
    label.addEventListener('click', function() {
      if (window.innerWidth < 768) {
        const section = this.closest('.filter-section');
        const content = section.querySelector('.category-options, .price-range-inputs, .stock-options, .sort-options');
        if (content) {
          content.style.display = content.style.display === 'none' ? '' : 'none';
        }
      }
    });
  });
});
</script>