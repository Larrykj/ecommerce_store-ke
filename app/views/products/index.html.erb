<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="display-4 fw-bold">Our Products</h1>
  <span class="badge bg-primary fs-5 rounded-pill"><%= @products.count %> Items</span>
</div>

<% if @products.any? %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <!-- Placeholder image since we don't have images yet -->
          <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
            <i class="bi bi-box-seam display-1 text-secondary"></i>
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold"><%= product.name %></h5>
            <p class="card-text text-muted flex-grow-1"><%= truncate(product.description, length: 100) %></p>
            <div class="d-flex justify-content-between align-items-center mt-3">
              <span class="h4 mb-0 text-primary"><%= number_to_currency(product.price, unit: "KSh ") %></span>
              <small class="text-<%= product.quantity > 0 ? 'success' : 'danger' %> fw-bold">
                <%= product.quantity > 0 ? "#{product.quantity} in stock" : "Out of Stock" %>
              </small>
            </div>
          </div>
          <div class="card-footer bg-white border-top-0 pb-3">
            <div class="d-grid gap-2">
              <%= link_to product, class: "btn btn-outline-primary" do %>
                View Details
              <% end %>
              <!-- We could add Add to Cart button here later -->
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-5">
    <i class="bi bi-inbox display-1 text-muted"></i>
    <p class="lead mt-3">No products available yet.</p>
    <%= link_to "Add Your First Product", new_product_path, class: "btn btn-primary btn-lg mt-2" %>
  </div>
<% end %>