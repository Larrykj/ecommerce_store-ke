<div class="container">
  <h1>Shopping Cart</h1>

  <% if @cart_items.empty? %>
    <div class="alert alert-info">
      <p>Your cart is empty.</p>
      <%= link_to 'Continue Shopping', products_path, class: 'btn btn-primary' %>
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |item| %>
            <tr>
              <td>
                <%= link_to item.product.name, product_path(item.product) %>
              </td>
              <td><%= number_to_currency(item.product.price, unit: "KSh ") %></td>
              <td>
                <%= form_with url: cart_item_path(item), method: :patch, local: true, class: 'd-flex align-items-center' do |f| %>
                  <%= f.number_field :quantity, value: item.quantity, min: 1, max: item.product.quantity, class: 'form-control form-control-sm me-2', style: 'width: 80px;' %>
                  <%= f.submit 'Update', class: 'btn btn-sm btn-warning' %>
                <% end %>
              </td>
              <td><strong><%= number_to_currency(item.subtotal, unit: "KSh ") %></strong></td>
              <td>
                <%= button_to 'Remove', cart_item_path(item), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3" class="text-end"><strong>Total:</strong></td>
            <td colspan="2"><strong><%= number_to_currency(@cart.total_price, unit: "KSh ") %></strong></td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="mt-3">
      <%= link_to 'Continue Shopping', products_path, class: 'btn btn-secondary' %>
      <%= link_to 'Proceed to Checkout', new_order_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>