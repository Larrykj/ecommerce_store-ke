# Environment Variables for Production Deployment
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/ecommerce_production

# Encryption Keys (Generate new ones for production!)
# Generate with: bundle exec rails db:encryption:init
ACTIVE_RECORD_PRIMARY_KEY=your_primary_key_here
ACTIVE_RECORD_DETERMINISTIC_KEY=your_deterministic_key_here
ACTIVE_RECORD_KEY_DERIVATION_SALT=your_salt_here

# Lockbox Encryption (Generate new one for production!)
# Generate with: bundle exec rails runner "puts Lockbox.generate_key"
LOCKBOX_MASTER_KEY=your_lockbox_master_key_here

# Rails Secret Key Base
SECRET_KEY_BASE=your_secret_key_base_here

# Optional: Email Configuration (if using SMTP)
# SMTP_USER_NAME=your_smtp_username
# SMTP_PASSWORD=your_smtp_password
# SMTP_ADDRESS=smtp.example.com
# SMTP_PORT=587
